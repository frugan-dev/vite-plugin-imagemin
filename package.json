{
  "name": "@vheemstra/vite-plugin-imagemin-monorepo",
  "private": true,
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "homepage": "https://github.com/vheemstra/vite-plugin-imagemin#readme",
  "keywords": [
    "vite",
    "vite-plugin",
    "imagemin",
    "minify",
    "compress",
    "jpg",
    "png",
    "gif",
    "svg",
    "webp",
    "avif"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --cache .",
    "dev": "pnpm -r --parallel --filter \"./packages/*\" run dev",
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "build-all": "pnpm -r --filter \"./packages/*\" run build && pnpm -r --filter \"./playground\" run build",
    "_format": "prettier --write --cache .",
    "_typecheck": "tsc -p scripts --noEmit && tsc -p playground --noEmit",
    "_test": "run-s test-serve test-build",
    "_test-serve": "vitest run -c vitest.config.e2e.ts",
    "_test-build": "VITE_TEST_BUILD=1 vitest run -c vitest.config.e2e.ts",
    "_test-build-without-plugin-commonjs": "VITE_TEST_WITHOUT_PLUGIN_COMMONJS=1 pnpm test-build",
    "_debug-serve": "VITE_DEBUG_SERVE=1 vitest run -c vitest.config.e2e.ts",
    "_debug-build": "VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 vitest run -c vitest.config.e2e.ts",
    "_release": "tsx scripts/release.ts",
    "_ci-publish": "tsx scripts/publishCI.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.3"
  }
}
